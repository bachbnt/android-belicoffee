<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorTeal</item>
    </style>

    <style name="LoginEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/mediumSpace</item>
        <item name="android:background">@drawable/bg_login_edittext</item>
        <item name="android:drawablePadding">@dimen/mediumSpace</item>
        <item name="android:padding">@dimen/mediumSpace</item>
    </style>

    <style name="MenuTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/smallSpace</item>
        <item name="android:background">@color/colorWhite</item>
        <item name="android:drawableRight">@drawable/ic_navigate_next_dark_cyan_32dp</item>
        <item name="android:drawablePadding">@dimen/largeSpace</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/largeSpace</item>
        <item name="android:paddingRight">@dimen/mediumSpace</item>
        <item name="android:paddingTop">@dimen/mediumSpace</item>
        <item name="android:paddingBottom">@dimen/mediumSpace</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorDarkCyan</item>
        <item name="android:textSize">@dimen/mediumFontSize</item>
    </style>

</resources>
