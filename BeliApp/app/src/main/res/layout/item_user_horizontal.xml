<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_user_hor"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/mediumSpace"
    android:layout_marginRight="@dimen/mediumSpace"
    android:padding="@dimen/smallSpace">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_avatar_user_hor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/smallSpace"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="27dp">

        <ImageView
            android:id="@+id/iv_avatar_user_hor"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:background="@color/colorWhite"
            android:src="@drawable/ic_belicoffee_small" />
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/tv_username_user_hor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cv_avatar_user_hor"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical"
        android:text="Username"
        android:textAllCaps="false"
        android:textColor="@color/colorDarkCyan"
        android:textSize="@dimen/smallFontSize" />
</RelativeLayout>